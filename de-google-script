#!/bin/bash

# Este script se utiliza para de-Googelear un telefono android, para ello es
# necesario tener instalado adb en el ordenador.

# Estas son todas las aplicaciones que se van a eliminar, sin no quieres quitar 
# una a√±ade un # delante.

# YouTube. (Recomendado utilizar NewPipe de la F-droid)
adb shell pm uninstall --user 0 com.google.android.youtube

# Gmail
adb shell pm uninstall --user 0 com.google.android.gm

# Keep
adb shell pm uninstall --user 0 com.google.android.keep

# Play Store (Recomendado utilizar Aurora Store de la F-droid)
adb shell pm uninstall --user 0 com.android.vending

# Calendario
adb shell pm uninstall --user 0 com.google.android.calendar

# Mapas (Recomendado utilizar la version web)
adb shell pm uninstall --user 0 com.google.android.apps.maps

# Bienestar Digial
adb shell pm uninstall --user 0 com.google.android.apps.wellbeing

# Drive
adb shell pm uninstall --user 0 com.google.android.apps.docs

# Contactos (Recomendado utilizar Simple Contacts de la F-droid)
adb shell pm uninstall --user 0 com.google.android.contacts

# App de Google
adb shell pm uninstall --user 0 com.google.android.googlequicksearchbox

# Fotos (Recomendado utilizar Simple Gallery de la F-droid)
adb shell pm uninstall --user 0 com.google.android.apps.photos

# Mensajes (Recomendado utilizar Simple SMS de la F-droid)
adb shell pm uninstall --user 0 com.google.android.apps.messaging

# Telefono (Recomendado utilizar Simple Dialer de la F-droid)
adb shell pm uninstall --user 0 com.google.android.dialer

# Archivos
adb shell pm uninstall --user 0 com.google.android.apps.nbu.files

# Asistente
adb shell pm uninstall --user 0 com.google.android.apps.googleassistant

# Google chrome
adb shell pm uninstall --user 0 com.android.chrome

# Google Pay
adb shell pm uninstall --user 0 com.google.android.apps.walletnfcrel
